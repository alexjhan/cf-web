# Configuración WhatsApp RAG System - DESARROLLO
# ============================================

# 🌍 CONFIGURACIÓN DEL ENTORNO
NODE_ENV=development
PORT=3001
HOST=localhost

# 📡 CONFIGURACIÓN API
RAG_API_URL=http://localhost:8000/ingest/messages
RAG_API_TIMEOUT=10000
RAG_API_RETRY_ATTEMPTS=2

# 📱 CONFIGURACIÓN WHATSAPP
WHATSAPP_SESSION_TIMEOUT=900000
WHATSAPP_RECONNECT_ATTEMPTS=5
WHATSAPP_HEADLESS=false
WHATSAPP_TAKE_SCREENSHOT=true
WHATSAPP_DISABLE_SPOOF=false

# 🔄 CONFIGURACIÓN DE RECONEXIÓN
RECONNECT_DELAY_BASE=3000
RECONNECT_DELAY_MAX=60000
MAX_INACTIVE_TIME=600000
HEALTH_CHECK_INTERVAL=60000

# 📊 CONFIGURACIÓN DE LOGS
LOG_LEVEL=debug
LOG_FILE_MAX_SIZE=10M
LOG_MAX_FILES=3
LOG_COMPRESS=false

# 💾 CONFIGURACIÓN DE ALMACENAMIENTO
MAX_MESSAGE_HISTORY_DAYS=7
MESSAGE_BATCH_SIZE=50
CLEANUP_INTERVAL_HOURS=6

# 🎯 CONFIGURACIÓN DE FILTROS ACADÉMICOS
MIN_MESSAGE_LENGTH=5
ACADEMIC_KEYWORDS_WEIGHT=1.5
QUESTION_PATTERN_WEIGHT=1.2
STUDY_KEYWORDS_WEIGHT=1.0

# 📈 CONFIGURACIÓN DE MONITOREO
ENABLE_METRICS=true
METRICS_INTERVAL=30000
STATUS_CHECK_INTERVAL=15000
